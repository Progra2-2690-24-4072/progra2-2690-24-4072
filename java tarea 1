package ejemplo;
public class Circulo extends Figura {
    private double radio;
    
    public Circulo (double radio)
    {
        this.radio = radio;
        
    }
    public static double pi = 3.1416;
    

    public double getRadio() {
        return radio;
    }

    public void setRadio(double radio) {
        this.radio = radio;
    }
    
    public double area (){
        return pi * (radio * radio);
    }
    
}

package ejemplo;

public class Ejemplo {

    public static void main(String[] args) {
        System.out.println(Circulo.pi);
        Circulo c1 = new Circulo (32);
        System.out.println(c1.area());
        c1.setX(10);
        c1.setY(2);
        
    }
}

package ejemplo;
public class Figura {
    
    private int x, y;

    public int getX() {
        return x;
    }

    public void setX(int x) {
        this.x = x;
    }

    public int getY() {
        return y;
    }

    public void setY(int y) {
        this.y = y;
    }
    
    
    
}

package ejemplo.pkg2;

public class Ejemplo2 {
    public static void main(String[] args) {
        Transaccion t1 = new Transaccion(100.0);
        t1.procesarPago();

        PagoTarjeta t2 = new PagoTarjeta(250.0, "1234-5678-9012-3456");
        t2.procesarPago();
    }
}
package ejemplo.pkg2;

public class PagoTarjeta extends Transaccion {
    private String numeroTarjeta;

    public PagoTarjeta(double monto, String numeroTarjeta) {
        super(monto);
        this.numeroTarjeta = numeroTarjeta;
    }

    @Override
    public void procesarPago() {
        System.out.println("Procesando pago de Q" + monto + " con tarjeta: " + numeroTarjeta);
    }
}

package ejemplo.pkg2;

public class Transaccion {
    protected double monto;

    public Transaccion(double monto) {
        this.monto = monto;
    }

    public void procesarPago() {
        System.out.println("Procesando pago de: Q" + monto);
    }
}




package computadora;

public class Computadora {
    public static void main(String[] args) {
        
        Teclado teclado = new Teclado("Negro", "DELL", "Membrana", 104);
        Pantalla pantalla = new Pantalla();
        Pc miComputadora = new Pc(teclado, pantalla);

        miComputadora.encender("A");

        miComputadora.encender("F1");
    }
}

package computadora;

public class Teclado {
    private String color;
    private String marca;
    private String tipoEscritura;
    private int tamaño;

    // Constructor
    public Teclado(String color, String marca, String tipoEscritura, int tamaño) {
        if (tamaño <= 0) {
            System.out.println("El tamaño debe ser mayor que cero.");
            tamaño = 1; // Valor por defecto si el tamaño no es válido
        }
        this.color = color;
        this.marca = marca;
        this.tipoEscritura = tipoEscritura;
        this.tamaño = tamaño;
    }

    // Método para simular que escribe
    public void escribir(String texto) {
        System.out.println("Teclado escribiendo: " + texto);
    }

    public String getColor() {
        return color;
    }

    public String getMarca() {
        return marca;
    }

    public String getTipoEscritura() {
        return tipoEscritura;
    }

    public int getTamaño() {
        return tamaño;
    }
}

package computadora;

public class Pantalla {
    public void encender() {
        System.out.println("Pantalla encendida.");
    }
}

package computadora;

public class Pc {
    private Teclado teclado;
    private Pantalla pantalla;

    // Constructor
    public Pc(Teclado teclado, Pantalla pantalla) {
        if (teclado == null || pantalla == null) {
            System.out.println("Se necesita un teclado y una pantalla para armar la computadora.");
            return;
        }
        this.teclado = teclado;
        this.pantalla = pantalla;
    }

    // Método para encender la PC
    public void encender(String teclaPresionada) {
        teclado.escribir("Presionando la tecla: " + teclaPresionada);

        if (teclaPresionada.equalsIgnoreCase("F1")) {
            pantalla.encender();
        } else {
            System.out.println("Pantalla no se encendió. Usa la tecla F1.");
        }
    }
}

